create Table Global_tasks(
	gtask_id int GENERATED by DEFAULT as identity primary key,
	name varchar NOT NULL
);

create Table Sub_tasks(
	subtask_id int GENERATED By DEFAULT as identity primary key,
	name varchar not NULL,
	gtask_id int,
	parent_subtask_id int
);

create table Tasks(
	task_id int GENERATED by DEFAULT as identity primary key,
	subtask_id int,
	name VARCHAR NOT NULL,
	started_at BIGINT,
	finished_at BIGINT,
	duration int not null

);